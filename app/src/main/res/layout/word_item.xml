<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_radius_20"
    android:backgroundTint="@color/input_layout_bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivWordImage"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvMainWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.Kekod.Title"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivWordImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Valcano" />

    <TextView
        android:id="@+id/tvTurkishMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.Kekod.SubTitle"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivWordImage"
        app:layout_constraintTop_toBottomOf="@+id/tvMainWord"
        tools:text="Volkanik" />

    <TextView
        android:id="@+id/tvFrenchMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/TextAppearance.Kekod.SubTitle"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivWordImage"
        app:layout_constraintTop_toBottomOf="@+id/tvTurkishMean"
        tools:text="Volkanik" />

    <ImageView
        android:id="@+id/ivTurkishFlag"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_turkish_flag"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTurkishMean"
        app:layout_constraintStart_toEndOf="@+id/tvTurkishMean"
        app:layout_constraintTop_toTopOf="@+id/tvTurkishMean" />

    <ImageView
        android:id="@+id/ivFrenchFlag"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_french_flag"
        app:layout_constraintBottom_toBottomOf="@+id/tvFrenchMean"
        app:layout_constraintStart_toEndOf="@+id/tvFrenchMean"
        app:layout_constraintTop_toTopOf="@+id/tvFrenchMean" />

    <ImageView
        android:id="@+id/ivPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@+id/tvMainWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMainWord"
        app:layout_constraintTop_toTopOf="@+id/tvMainWord" />

    <TextView
        android:id="@+id/tvPlayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listen"
        android:textAppearance="@style/TextAppearance.Kekod.SubTitle"
        android:textColor="@color/light_black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/ivPlayButton"
        app:layout_constraintStart_toStartOf="@+id/ivPlayButton"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayButton" />


    <ImageView
        android:id="@+id/ivFavoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/ivWordImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivWordImage"
        tools:src="@drawable/ic_unfavorite" />
</androidx.constraintlayout.widget.ConstraintLayout>